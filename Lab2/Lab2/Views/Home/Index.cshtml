
@{
    ViewBag.Title = "Home";
}

<form action="/Home/Login" method="post">
    <div class="container-fluid" align="center" style="padding-top: 30vh;">
        <table>
            <tr>
                <td><label for="inputEmail3" class="col-sm-2 col-form-label">Username</label></td>
                <td>
                    <div class="col-sm-10">
                        <input type="text" name="Username" class="form-control" id="inputEmail3">
                    </div>
                </td>
            </tr>
            <tr>
                <td><label for="inputPassword3" class="col-sm-2 col-form-label">Password</label></td>
                <td>
                    <div class="col-sm-10">
                        <input type="password" name="Password" class="form-control" id="inputPassword3">
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </td>
            </tr>
        </table>
    </div>
    
</form>
